<!DOCTYPE html>
<html>
    <head>
        <title>Log In To Persongify</title>
        <%- include ("../partials/bs5.ejs") %>
        <%- include ("../partials/google-fonts.ejs") %>
        <%- include ("../partials/google-icons.ejs") %>

        <style>
            :root {
                --brand-magenta: #ef007e
            }
            body {
                background-image: url('media/bg-hollow.png');
                background-repeat: no-repeat;
                background-size: 100%;
                overflow-x: hidden;
            }
            #nav-home {
                background-color: var(--brand-magenta);
            }
            #formSubmit {
                background-color: var(--brand-magenta);
            }
            .span-magenta {
                color: var(--brand-magenta);
            }
        </style>
    </head>
    <body>
        <!-- HEADINGS -->
        <div class="container-fluid mx-3 my-4 float-start">
            <form action="/" method="get" class="form-inline">
                <button type="submit" id="nav-home"
                    class="btn btn-outline-dark border-noset">
                    <span class="material-symbols-outlined align-text-top">
                        chevron_left
                    </span>
                    Back to Persongify Home
                </button>
            </form>
        </div>
        <div class="container text-center mb-3 clearfix">
            <h1 class="display-1 text-uppercase text-white">Log in to <span class="span-magenta">Persongify</span></h1>
        </div>

        <!-- LOGIN FORM -->
        <div class="container w-50 p-3">
            <form action="/verify-login" method="post">
                <!-- username -->
                <div class="form-floating flex-grow-1">
                    <input type="text" id="uname" name="f_uname" 
                    class="form-control" placeholder="Username"
                    required>
                    <label for="firstName">Username</label>
                </div>
                <!-- password -->
                <div class="form-floating flex-grow-1">
                    <input type="password" id="pwd" name="f_pwd"
                    class="form-control" placeholder="Password"
                    required>
                    <label for="age">Password</label>
                </div>
                <!-- form buttons -->
                <div class="d-grid gap-3">
                    <button type="submit" value="Submit" id="formSubmit"
                    class="btn btn-outline-dark btn-lg btn-block border-noset">Log In</button>
                </div>
            </form>
        </div>
    </body>
</html>